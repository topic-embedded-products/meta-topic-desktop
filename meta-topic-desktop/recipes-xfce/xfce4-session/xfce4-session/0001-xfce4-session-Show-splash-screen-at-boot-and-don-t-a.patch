From 71d2167e83f6877d35d696f72f50c6402683efc8 Mon Sep 17 00:00:00 2001
From: Mike Looijmans <mike.looijmans@topic.nl>
Date: Fri, 13 Dec 2019 07:33:19 +0100
Subject: [PATCH] xfce4-session: Show splash screen at boot and don't autosave
 sessions

---
 settings/xfce4-session.xml | 11 ++++++++++-
 1 file changed, 10 insertions(+), 1 deletion(-)

diff --git a/settings/xfce4-session.xml b/settings/xfce4-session.xml
index a1c87bd..7f171a2 100644
--- a/settings/xfce4-session.xml
+++ b/settings/xfce4-session.xml
@@ -4,6 +4,7 @@
   <property name="general" type="empty">
     <property name="FailsafeSessionName" type="string" value="Failsafe"/>
     <property name="LockCommand" type="string" value=""/>
+    <property name="SaveOnExit" type="bool" value="false"/>
   </property>
   <property name="sessions" type="empty">
     <property name="Failsafe" type="empty">
@@ -33,6 +34,14 @@
     </property>
   </property>
   <property name="splash" type="empty">
-    <property name="Engine" type="string" value=""/>
+    <property name="Engine" type="string" value="simple"/>
+    <property name="engines" type="empty">
+      <property name="simple" type="empty">
+        <property name="Font" type="string" value="Sans Bold 10"/>
+        <property name="BgColor" type="string" value="rgb(0,0,0)"/>
+        <property name="FgColor" type="string" value="rgb(255,255,255)"/>
+        <property name="Image" type="string" value=""/>
+      </property>
+    </property>
   </property>
 </channel>
